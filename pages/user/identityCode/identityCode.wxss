.container {
  min-height: 100vh;
  background-color: #ffffff;
  padding-bottom: 30rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #ffffff;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back {
  width: 24rpx;
  height: 44rpx;
  position: relative;
}

.back::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%) rotate(45deg);
  width: 20rpx;
  height: 2rpx;
  background-color: #333333;
}

.back::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%) rotate(-45deg);
  width: 20rpx;
  height: 2rpx;
  background-color: #333333;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.placeholder {
  width: 40rpx;
}

.code-container {
  margin: 30rpx;
  background-color: #ffffff;
  padding: 20rpx;
}

.barcode {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.barcode-canvas {
  width: 95%;
  height: 250rpx;
  background-color: #ffffff;
}

.test-btn {
  margin-top: 20rpx;
  background-color: #f0f0f0;
  color: #333;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
  border: none;
}

.barcode image {
  width: 95%;
  height: 250rpx;
}

/* 放大的条形码样式 */
.enlarged-barcode-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.enlarged-barcode-canvas {
  width: 90%;
  height: 500rpx;
  background-color: #ffffff;
  margin-bottom: 30rpx;
}

.enlarged-barcode-text {
  font-size: 28rpx;
  color: #666666;
}

.info-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  align-items: center;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  justify-content: center;
}

.label {
  font-size: 30rpx;
  color: #666666;
  margin-right: 10rpx;
}

.value {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
  font-weight: 500;
}